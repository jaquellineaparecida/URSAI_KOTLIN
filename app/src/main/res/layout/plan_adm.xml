<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/plan_border" >

    <TextView
        android:id="@+id/planTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:fontFamily="@font/nunito" />

    <TextView
        android:id="@+id/descricao_plano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/nunito" />

    <TextView
        android:id="@+id/preco_plano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="@font/nunito"
        android:layout_gravity="end"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editPlanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/edit_plan"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/edit"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/deletePlanImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/delete_plan"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/delete"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
